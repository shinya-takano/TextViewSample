                    android:id="@+id/sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="¥3,000" />
            </LinearLayout>
        </LinearLayout>

